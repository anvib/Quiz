<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:id="@+id/activity_addition_landscape"
    tools:context="com.example.anvita.quiz.Addition"
    >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_weight="1"
            >

            <fragment
                android:name="com.example.anvita.quiz.AdditionFragment"
                android:id="@+id/fragmentAdd"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />


        </LinearLayout>




        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="1" >


            <fragment
                android:name="com.example.anvita.quiz.MyGridFragment"
                android:id="@+id/fragmentGrid"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />


        </LinearLayout>

    </LinearLayout>