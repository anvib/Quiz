            />

        <Button
            android:text="6"
            android:layout_columnWeight="1"
            android:background="@drawable/button"
            android:id="@+id/button6"
            android:textSize="18sp"
            android:onClick="buttonPress"
            android:layout_margin="2dp"
            />

        <Button
            android:text="7"
            android:layout_columnWeight="1"
            android:background="@drawable/button"
            android:id="@+id/button7"
            android:textSize="18sp"
            android:onClick="buttonPress"
            android:layout_margin="2dp"
            />

        <Button
            android:text="8"
            android:layout_columnWeight="1"
