            />

        <Button
            android:text="0"
            android:layout_columnWeight="1"
            android:background="@drawable/button"
            android:id="@+id/button0"
            android:textSize="18sp"
            android:onClick="buttonPress"
            android:layout_margin="2dp"
            />

        <Button
            android:text="Next"
            android:layout_columnWeight="1"
            android:background="@drawable/button"
            android:id="@+id/buttonNext"
            android:textSize="18sp"
            android:onClick="buttonPress"
            android:layout_margin="2dp"
            />


    </GridLayout>

</RelativeLayout>
